    const langDropdown = document.getElementById("language-dropdown");

    function updateLanguage(lang) {
      const dict = translations[lang] || translations["en"];
      document.documentElement.lang = lang;
      document.querySelectorAll("[data-i18n]").forEach((el) => {
        const key = el.getAttribute("data-i18n");
        if (dict[key]) {
          el.innerText = dict[key];
        } else if (translations["en"][key]) {
          el.innerText = translations["en"][key];
        }
      });
      if (langDropdown) {
        langDropdown.value = lang;
      }
      localStorage.setItem("gch-lang", lang);
    }

    if (langDropdown) {
      langDropdown.addEventListener("change", () => {
        updateLanguage(langDropdown.value);
      });
    }

    const savedLang = localStorage.getItem("gch-lang") || "en";
    updateLanguage(savedLang);

    // Contact form dummy handler
    const contactForm = document.getElementById("contact-form");
    if (contactForm) {
      contactForm.addEventListener("submit", (e) => {
        e.preventDefault();
        alert("Thank you for reaching out! We’ll get back to you as soon as we can.");
        contactForm.reset();
      });
    }
  </script>
</body>
</html>
